<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qfpay_bg"
    android:orientation="vertical" >

    <include layout="@layout/qfpay_v2_title2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/pg_loading_account"
                style="@style/myInDeterProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="2dip"
                android:background="@drawable/qfpay_white_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/reg_layout_padding"
                android:paddingLeft="@dimen/reg_layout_padding"
                android:paddingRight="@dimen/reg_layout_padding"
                android:paddingTop="8dip" >

                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/certificateTip0"
                    android:textColor="@color/textblack" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dip"
                    android:layout_height="wrap_content"
                    android:text="@string/certificateTip1"
                    android:textColor="@color/textblack" />
                
                <TextView
                    android:layout_marginTop="8dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/certificateTip2"
                    android:textColor="@color/textblack" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dip"
                    android:src="@drawable/qfpay_sample_upload" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dip"
                    android:layout_marginTop="2dip"
                    android:text="示例图"
                    android:textColor="@color/textblack" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_agree"
                android:layout_width="match_parent"
                android:layout_height="@dimen/reg_btn_next_height"
                android:layout_gravity="center"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="@dimen/reg_layout_margin"
                android:layout_marginRight="@dimen/reg_layout_margin"
                android:layout_marginTop="14dip"
                android:background="@drawable/qfpay_next_normal"
                android:text="上传照片"
                android:textColor="@color/qfpay_white"
                android:textSize="22dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/Users/qfpay/Workspace/QTPaySDK-Android/QTPayDemo/possdk/src/main/res/layout/qfpay_main_certificate_preview.xml -->