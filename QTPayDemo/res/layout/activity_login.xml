<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColorBg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <com.example.qianfangdemo.view.ClearEditText
                android:id="@+id/username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_input_reg"
                android:drawableLeft="@drawable/login_user"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_login_delete"
                android:gravity="center_vertical|left"
                android:hint="手机号"
                android:text=""
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/medium" />
        </RelativeLayout>


        <Button
            android:id="@+id/login"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_nextstep"
            android:text="登  录"
            android:textSize="@dimen/medium" />
    </LinearLayout>

</RelativeLayout>