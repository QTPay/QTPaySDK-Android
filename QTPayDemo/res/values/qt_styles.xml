<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 模块主题文字 -->
    <style name="QTTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/qt_small</item>
        <item name="android:textColor">@color/qtLightGray</item>
    </style>

    <!-- 主要文字样式 -->
    <style name="QTCommonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/qtDarkGray</item>
        <item name="android:textSize">@dimen/qt_medium</item>
    </style>

    <style name="QTOrderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/qtDarkGray</item>
        <item name="android:textSize">@dimen/qt_medium</item>
    </style>

    <!-- 黑字体样式 -->
    <style name="QTHeadBondBlackText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/qtBondBlack</item>
        <item name="android:textSize">@dimen/qt_medium</item>
    </style>

    <style name="QTBondBlackText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/qtBondBlack</item>
        <item name="android:textSize">@dimen/qt_medium</item>
    </style>

    <!-- 特殊标识文字 -->
    <style name="QTSpecialText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/qtSpecialText</item>
        <item name="android:textSize">@dimen/qt_medium</item>
    </style>

    <style name="DialogStyleQt" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 整个布局的隐藏和显示控制，方便界面编写 -->
    <style name="ViewVisible">
        <item name="android:visibility">visible</item>
    </style>

</resources>